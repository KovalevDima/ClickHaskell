Cabal-version:      3.0
name:               ClickHaskell-eventlog-writer
version:            0.0.0.1
build-type:         Simple
license:            BSD-3-Clause

library
  default-language: Haskell2010
  Exposed-Modules:
    ChEventlogWriter
  build-depends:
      ClickHaskell
    , aeson
    , async
    , base >=4.7 && <5
    , bytestring
    , eventlog-socket
    , time
    , stm
    , ghc-events
  ghc-options:
    -Wall
    -Wunused-packages
