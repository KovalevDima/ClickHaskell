Cabal-version:      3.0

name:               t005-settings
version:            0.0.0.1
build-type:         Simple
license:            BSD-3-Clause

executable t005-settings
  main-is: index.lhs
  hs-source-dirs: .
  ghc-options:
    -O2
    -pgmL markdown-unlit
    -Wall
  build-tool-depends: markdown-unlit:markdown-unlit
  build-depends:
      ClickHaskell
    , async
    , data-default-class
    , base >=4.7 && <5
    , bytestring
  default-language: Haskell2010
  default-extensions:
    OverloadedStrings
    DataKinds
    DeriveAnyClass
    DeriveGeneric
    DerivingStrategies
    TypeApplications
